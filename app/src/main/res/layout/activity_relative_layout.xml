<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/baby1_image_view"
        android:layout_width="177dp"
        android:layout_height="219dp"
        android:src="@drawable/baby1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/baby1_image_view"
        android:text="James"
        android:textSize="70dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/baby2_image_view"
        android:layout_width="177dp"
        android:layout_height="219dp"
        android:layout_below="@id/baby1_image_view"
        android:layout_alignLeft="@id/baby1_image_view"
        android:src="@drawable/baby2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="145dp"
        android:layout_toRightOf="@id/baby2_image_view"
        android:text="Son"
        android:textSize="70dp"
        android:textStyle="bold" />


</RelativeLayout>
